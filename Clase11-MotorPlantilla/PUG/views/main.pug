include ./partials/header

  div(clas="container-sm" style="padding: 50px 50px 10px")
    h3(style="color: blue") Vista de productos
    br
    if lista.length 
      table(class="table table-dark")
        thead
          tr
            th(scope="col") Nombre
            th(scope="col") Precio
            th(scope="col") Foto
        tbody
            each prod in lista
              tr
                td= prod.title
                td= prod.price
                td= kosa 
                  img(src=prod.thumbnail width=50 height=50)
    else 
      div(clas="container-sm" style="background-color:#fdf1d6; padding: 10px 10px 10px")
        h5(style="color: #91684a") No se encontraron productos